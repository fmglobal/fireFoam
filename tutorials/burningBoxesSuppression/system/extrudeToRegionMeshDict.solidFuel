FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      extrudeToRegionMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

region          solidFuelRegion;

faceZones       (solidFuel);

oneD            true;

sampleMode      nearestPatchFace;

extrudeModel    linearNormal;

oneDPolyPatchType empty;

nLayers         20;

expansionRatio  1;

adaptMesh       true;

linearNormalCoeffs
{
    thickness       0.02286;
}

