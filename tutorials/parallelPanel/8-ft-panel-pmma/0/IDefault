{
    ".*"
    {
        type            greyDiffusiveRadiation;
        T               T;
        emissivityMode  lookup;
        value           uniform 0;
    }

    region0_to_fuelRegion_fuel
    {
        type            greyDiffusiveRadiationFF;
        T               T;
        emissivityMode  solidRadiation;
        value           uniform 0;
    }
